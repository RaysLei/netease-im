<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_mine_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:padding="@dimen/dp_20">

        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/hiv_mine_avatar"
            android:layout_width="@dimen/jrmf_dimen_50"
            android:layout_height="@dimen/jrmf_dimen_50" />


        <TextView
            android:id="@+id/tv_mine_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/hiv_mine_avatar"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_mine_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mine_nick_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/hiv_mine_avatar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_arrow" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_mine_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_14"
        android:text="@string/mine_about"
        android:textColor="@color/color_black_333333" />

    <TextView
        android:id="@+id/tv_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_14"
        android:text="@string/mine_setting"
        android:textColor="@color/color_black_333333" />

</LinearLayout>